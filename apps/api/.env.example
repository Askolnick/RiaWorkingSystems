# RIA Management API Configuration

# API Server
API_HOST=0.0.0.0
API_PORT=3002
API_TIMEOUT=30000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ria_management
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters
JWT_EXPIRATION=7d
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# CORS
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# Email
EMAIL_PROVIDER=smtp
EMAIL_FROM_NAME=RIA Management
EMAIL_FROM_EMAIL=noreply@yourdomain.com
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_SECURE=false
EMAIL_SMTP_USERNAME=your_email_username
EMAIL_SMTP_PASSWORD=your_email_password

# Security
SECURITY_ENABLE_HTTPS=false
SECURITY_ENABLE_HSTS=false
SECURITY_ENABLE_CSRF=true
SECURITY_ENABLE_XSS=true
SECURITY_ENABLE_CSP=true
SECURITY_ALLOWED_HOSTS=localhost,127.0.0.1
SECURITY_TRUSTED_PROXIES=

# Features
FEATURES_ADVANCED_ANALYTICS=false
FEATURES_EXPERIMENTAL=false
FEATURES_DEBUG_MODE=false
FEATURES_MAX_USERS_PER_TENANT=100
FEATURES_BACKGROUND_JOBS=true
FEATURES_METRICS=true

# Monitoring
MONITORING_LOGGING=true
MONITORING_LOG_LEVEL=info
MONITORING_METRICS=true
MONITORING_HEALTH_CHECK=true

# Environment
NODE_ENV=development