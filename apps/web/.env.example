# Copy this file to .env.local and fill in your values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here

# Development Mode Configuration
# Set to "true" to use mock data and localStorage instead of real API calls
# Set to "false" to use real API endpoints and database
NEXT_PUBLIC_USE_MOCK_DATA=true

# Database Configuration
# For production, provide your database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/ria_db"

# API Configuration
# Base URL for external API calls (when not in mock mode)
API_BASE_URL=http://localhost:3001

# Optional: External Services Configuration
# Email service (for notifications, password reset, etc.)
EMAIL_FROM=noreply@yourapp.com
EMAIL_SERVER=smtp://username:password@smtp.yourservice.com:587

# Optional: File Storage Configuration
# AWS S3 or compatible service
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Optional: Analytics and Monitoring
# Google Analytics
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# Optional: Feature Flags
# Enable/disable certain features
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=true
NEXT_PUBLIC_ENABLE_FILE_UPLOADS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=false