  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "tsx": "^4.7.0",
    "turbo": "latest",
    "glob": "^10.3.10",
    "@types/glob": "^8.1.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "immer": "^10.1.3",
    "zustand": "^5.0.8"
  }
