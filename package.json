{
  "name": "ria-starter",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "arch": "npx tsx tools/architecture-agent.ts",
    "arch:health": "npx tsx tools/architecture-agent.ts architecture-health",
    "arch:validate": "npx tsx tools/architecture-agent.ts validate-architecture",
    "arch:domains": "npx tsx tools/architecture-agent.ts validate-domains",
